{
  "name": "knowledgedrawer",
  "version": "0.1.0",
  "description": "",
  "main": "./build/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/inside-hakumai/knowledgedrawer.git"
  },
  "scripts": {
    "predev": "rimraf dev-out",
    "dev": "cross-env NODE_ENV=\"development\" concurrently --names \"renderer,preload-transpile,main-transpile,main-run\" \"npm run dev:renderer\" \"npm run dev:preload-transpile\" \"npm run dev:main-transpile\" \"npm run dev:main-run\"",
    "dev:renderer": "cross-env NODE_ENV=\"development\" vite --mode development --config vite.config.ts --port 51645",
    "dev:preload-transpile": "cross-env NODE_ENV=\"development\" nodemon --watch --watch-preserve-output --watch-path=./src/preload/ ./transpile-preload.js",
    "dev:main-transpile": "cross-env NODE_ENV=\"development\" node --watch --watch-preserve-output --watch-path=./src/main/ ./transpile-main.js",
    "dev:main-run": "cross-env NODE_ENV=\"development\" wait-on ./dev-out/main.js ./dev-out/preload.js http://localhost:51645 && node --watch --watch-preserve-output --watch-path=./dev-out/main.js ./node_modules/.bin/electron ./dev-out/main.js",
    "build:main": "esbuild ./src/main/index.ts --bundle --platform=node --outfile=out/main.js --external:electron",
    "build:preload": "esbuild ./src/preload/index.js --bundle --platform=node --outfile=out/preload.js --external:electron"
  },
  "author": "inside-hakumai",
  "license": "MIT",
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-vue": "^5.0.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.11",
    "dompurify": "^3.1.2",
    "electron": "^29.3.0",
    "esbuild": "^0.20.2",
    "fuse.js": "^7.0.0",
    "lint-staged": "^15.2.2",
    "marked": "^12.0.2",
    "nodemon": "^3.1.0",
    "pinia": "^2.1.7",
    "prettier": "^3.2.5",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^5.0.5",
    "sass": "^1.75.0",
    "stylelint": "^16.4.0",
    "stylelint-config-recess-order": "^5.0.1",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "tsyringe": "^4.8.0",
    "typescript": "^5.4.5",
    "uuid": "^9.0.1",
    "vite": "^5.2.8",
    "vite-tsconfig-paths": "^4.3.2",
    "vue": "^3.4.21",
    "wait-on": "^7.2.0",
    "zod": "^3.23.5"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "prettier --write"
    ]
  },
  "build": {
    "appId": "dev.insidehakumai.knowledgedrawer",
    "artifactName": "knowledgedrawer.${ext}",
    "afterSign": "misc/notarize.js",
    "productName": "KnowledgeDrawer",
    "files": [
      "build/**/*"
    ],
    "mac": {
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "misc/entitlements.mac.plist",
      "entitlementsInherit": "misc/entitlements.mac.plist",
      "icon": "assets/icon.png",
      "publish": [
        "github"
      ]
    },
    "win": {
      "icon": "assets/icon.png",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "publish": [
        "github"
      ],
      "category": "Development"
    },
    "dmg": {
      "sign": false
    },
    "extraResources": [
      "assets/**/*",
      "!assets/icon.ai",
      "!assets/trayIcon.ai"
    ]
  },
  "engines": {
    "node": "20.x"
  }
}
